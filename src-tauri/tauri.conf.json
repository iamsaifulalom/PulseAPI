{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Pulse API",
  "version": "0.1.0",
  "identifier": "com.saifulalom.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Pulse API",
        "minWidth": 400,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb","rpm" ],
    "icon": [
      "icons/32x32.png", 
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}